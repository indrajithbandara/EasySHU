<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/OptionFieldHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/InputOptionFieldStart"
            android:labelFor="@id/InputOptionFieldStart"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="28sp"
            android:layout_gravity="bottom"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="-"/>

        <EditText
            android:id="@+id/InputOptionFieldEnd"
            android:labelFor="@id/InputOptionFieldEnd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="28sp"
            android:layout_gravity="bottom"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/OptionFieldSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>