<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/OptionValueWithSuggestionHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/OptionValueSuggest1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/OptionValueSuggest2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/OptionValueSuggest3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/OptionValueSuggest4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/InputOptionValueWithSuggestion"
            android:labelFor="@id/InputOptionValueWithSuggestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:inputType="number"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/OptionValueWithSuggestionSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>